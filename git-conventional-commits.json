{
  "convention" : {
    "commitTypes": [
      "feat",
      "fix",
      "perf",
      "config",
      "refactor",
      "style",
      "test",
      "build",
      "ops",
      "docs",
      "chore",
      "merge",
      "revert"
    ],
    "commitScopes": [],
    "releaseTagGlobPattern": "v[0-9]*.[0-9]*.[0-9]*"
  },
  "changelog" : {
    "commitTypes": [
      "feat",
      "fix",
      "perf",
      "merge"
    ],
    "includeInvalidCommits": true,
    "commitIgnoreRegexPattern": "^WIP ",
    "headlines": {
      "feat": "Features",
      "fix": "Bug Fixes",
      "perf": "Performance Improvements",
      "merge": "Merges",
      "breakingChange": "BREAKING CHANGES"
    }
  }
}
