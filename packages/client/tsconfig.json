{
  "extends": "./configs/ts-config/tsconfig.rules.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
    },
    "types": ["jest", "node"],
    "typeRoots": ["./src/typings", "node_modules/@types"],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
