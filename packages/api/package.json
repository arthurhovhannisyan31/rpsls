{
  "name": "api",
  "packageManager": "yarn@3.2.4",
  "private": true,
  "scripts": {
    "build": "yarn cleanup && tsc",
    "start": "node ./dist/src/index.js",
    "start:dev": "./configs/scripts/start-dev",
    "cleanup": "rm -rf ./dist",
    "check-lint": "eslint --ext .ts,.js src/",
    "format": "yarn lint --fix",
    "gentypes": "graphql-codegen --config codegen.yml",
    "nodemon:dev": "nodemon -r dotenv/config ./dist/src/index.js dotenv_config_path=./configs/env/.env.dev",
    "jest-base": "node --expose-gc ./node_modules/jest/bin/jest.js",
    "check-test": "yarn jest-base --silent --coverage --maxWorkers 2 --no-cache --logHeapUsage",
    "check-test-changed": "yarn jest-base --silent --notify --maxWorkers 2 --onlyChanged",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "check-all": "yarn check-types && yarn check-lint && yarn check-test",
    "watch": "tsc -w"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dataloader": "^2.2.2",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-http": "^1.17.1",
    "mongoose": "^7.0.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.3.0",
    "@graphql-codegen/introspection": "3.0.1",
    "@graphql-codegen/typescript": "3.0.3",
    "@graphql-codegen/typescript-operations": "3.0.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/sinon": "^10.0.13",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.3",
    "mongodb-memory-server": "^8.12.2",
    "morgan": "^1.10.0",
    "node-notifier": "^10.0.1",
    "nodemon": "^2.0.22",
    "sinon": "^15.0.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
