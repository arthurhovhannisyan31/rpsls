{
  "extends": "./configs/ts-config/tsconfig.rules.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": ".",
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "outDir": "./dist",
    "types": ["jest", "node"],
    "typeRoots": ["./src/typings", "node_modules/@types"]
  },
  "include": ["src/**/*", "**/*.config.ts", "configs/**/*.ts", "**/*__tests__"],
  "exclude": ["**/*generated.tsx?"]
}
