{
  "extends": "../../configs/ts-config/tsconfig.rules.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": ".",
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "outDir": "./dist"
  },
  "include": ["src/**/*", "**/*.config.ts", "configs/**/*.ts", "**/*__tests__"],
  "exclude": ["**/*.spec.ts", "**/*generated.tsx?"]
}
