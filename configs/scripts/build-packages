#!/bin/bash

. "$(dirname "$0")/configs/colors"

CUR=$(pwd)

printf "🕓 Run build packages\n"

for PACKAGE in $(ls ./packages)
do
  cd $CUR/packages/$PACKAGE

  if ! yarn build
  then
      printf "❌ ${RED} Failed to build: ${NC}$PACKAGE \n"
      exit 1
  fi
  printf "✔ ${GREEN} Success, build package for: ${NC}$PACKAGE \n"
done
