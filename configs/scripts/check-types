#!/bin/bash

. "$(dirname "$0")/configs/colors"

CUR=$(pwd)

printf "üïì Run check types for packages\n"

for PACKAGE in $(ls ./packages)
do
  cd $CUR/packages/$PACKAGE

  if ! yarn check-types
  then
      printf "‚ùå ${RED} Failed to check types for: ${NC}$PACKAGE \n"
      exit 1
  fi
  printf "‚úî ${GREEN} Success, check types for: ${NC}$PACKAGE \n"
done
