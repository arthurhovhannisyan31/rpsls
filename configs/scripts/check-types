#!/bin/bash

. "$(dirname "$0")/configs/colors"

CUR=$(pwd)

for PACKAGE in $(ls ./packages)
do
  cd $CUR/packages/$PACKAGE

  printf "${GREEN}Run check types for: ${NC}$PACKAGE \n"

  if ! yarn check-types
  then
      printf "${RED}Failed to check types for: ${NC}$PACKAGE \n"
      exit 1
  fi
done
